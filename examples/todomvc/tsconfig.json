{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "isolatedModules": false,
    "plugins": [
      {
        "name": "@typed/virtual-module",
        "saveGeneratedFiles": true,
        "plugins": [
          {
            "name": "@typed/virtual-module/html"
          }
        ]
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}