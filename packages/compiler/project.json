{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --build packages/compiler/tsconfig.build.json"
          }
        ]
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/compiler/src/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test"
    },
    "build:cjs": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --build packages/compiler/tsconfig.cjs.build.json"
          }
        ],
        "parallel": false
      },
      "outputs": [
        "{projectRoot}/dist/cjs"
      ]
    }
  }
}
