{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc --build packages/nx-plugin/tsconfig.build.json"
          },
          {
            "command": "cp ./packages/nx-plugin/src/generators/package/schema.json ./packages/nx-plugin/dist/generators/package"
          },
          {
            "command": "cp -r packages/nx-plugin/src/generators/package/files packages/nx-plugin/dist/generators/package"
          }
        ],
        "parallel": false
      },
      "outputs": ["{projectRoot}/dist", "{projectRoot}/tsconfig.build.tsbuildinfo"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/nx-plugin/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    }
  }
}
