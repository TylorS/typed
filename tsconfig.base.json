{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": [
      "vite/client"
    ],
    "paths": {
      "@typed/dom/*": [
        "packages/dom/src/*"
      ],
      "@typed/fx/*": [
        "packages/fx/src/*"
      ],
      "@typed/html/*": [
        "packages/html/src/*"
      ],
      "@typed/internal/*": [
        "packages/internal/src/*"
      ],
      "@typed/node/*": [
        "packages/node/src/*"
      ],
      "@typed/path/*": [
        "packages/path/src/*"
      ],
      "@typed/route/*": [
        "packages/route/src/*"
      ],
      "@typed/router/*": [
        "packages/router/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "packages/*/dist"
  ]
}
